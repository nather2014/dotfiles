mkdir -p ~/.config/sway
cp /etc/sway/config ~/.config/sway/config

output eDP-1 disable
output HDMI-A-1 mode 1920x1080 position 0,0
#default_border pixel 2
#default_floating_border pixel 2
exec swayidle -w \
    timeout 90  'swaylock -f -c 000000' \
    timeout 110 'swaymsg "output * power off"' \
    resume       'swaymsg "output * power on"' \
    before-sleep 'swaylock -f -c 000000'

sudo apt install sway swaylock swayidle grim slurp wl-clipboard foot

curl -s "https://get.sdkman.io" | bash
source "$HOME/.sdkman/bin/sdkman-init.sh"
sdk install java 21-tem maven gradle 

sudo apt install git curl wget unzip code vim tree 

wget https://update.code.visualstudio.com/latest/linux-deb-x64/stable -O code.deb
sudo apt install ./code.deb


sudo dnf install docker-ce docker-ce-cli containerd.io
sudo systemctl enable --now docker
sudo usermod -aG docker $USER

sudo dnf install postgresql-server postgresql-contrib
sudo postgresql-setup --initdb
sudo systemctl enable --now postgresql


sudo apt install neovim
git clone https://github.com/nvim-lua/kickstart.nvim ~/.config/nvim
